<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restaurant_gradient_background"
    tools:context=".views.loginscreen.LoginActivity">

    <!-- Overlay semi‑transparente para mejor legibilidad -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/overlay_gradient"
        android:alpha="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor principal con scroll -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <!-- Título del restaurante -->

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:text="Sabores D`ZUASO`S"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Experiencia culinaria única"
                android:textColor="#E0FFFFFF"
                android:textSize="16sp"
                android:textStyle="italic"
                android:fontFamily="serif"
                android:gravity="center"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                app:layout_constraintTop_toBottomOf="@id/tvRestaurantName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Logo con diseño elegante -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="3dp"
                app:strokeColor="#FFD700"
                app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:contentDescription="@string/desc_login_chef"
                    android:scaleType="centerCrop"
                    android:padding="8dp"
                    app:srcCompat="@drawable/login_chef2"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Contenedor de formulario -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardForm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#F8F9FA"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:layout_constraintTop_toBottomOf="@id/cardLogo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Texto de bienvenida -->
                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="¡Bienvenido de vuelta!"
                        android:gravity="center"
                        android:textColor="#D32F2F"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tvLoginSubtext"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="Ingresa tus credenciales para continuar"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Campo Email mejorado -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/hint_email"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeColor="#D32F2F"
                        app:boxBackgroundColor="#FFFFFF"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:hintTextColor="#D32F2F"
                        app:startIconDrawable="@drawable/ic_restaurant_email"
                        app:startIconTint="#D32F2F"
                        app:endIconMode="clear_text"
                        app:endIconTint="#D32F2F"
                        app:layout_constraintTop_toBottomOf="@id/tvLoginSubtext"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="textEmailAddress"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:paddingVertical="18dp"
                            android:paddingHorizontal="16dp"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo Contraseña mejorado -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPassword"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="@string/hint_password"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeColor="#D32F2F"
                        app:boxBackgroundColor="#FFFFFF"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:hintTextColor="#D32F2F"
                        app:startIconDrawable="@drawable/ic_restaurant_lock"
                        app:startIconTint="#D32F2F"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="#D32F2F"
                        app:layout_constraintTop_toBottomOf="@id/tilEmail"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:paddingVertical="18dp"
                            android:paddingHorizontal="16dp"
                            android:gravity="center"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón Login elegante -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonEnter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:backgroundTint="#D32F2F"
                        android:text="@string/strLogin"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingVertical="16dp"
                        android:textAllCaps="false"
                        app:cornerRadius="25dp"
                        app:elevation="8dp"
                        app:rippleColor="#B71C1C"
                        app:icon="@drawable/ic_restaurant_login"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconTint="#FFFFFF"
                        style="@style/Widget.MaterialComponents.Button"
                        app:layout_constraintTop_toBottomOf="@id/tilPassword"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Separador -->
                    <View
                        android:id="@+id/divider"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginHorizontal="32dp"
                        android:background="#E0E0E0"
                        app:layout_constraintTop_toBottomOf="@id/buttonEnter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Texto "o" -->
                    <TextView
                        android:id="@+id/tvOr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        android:background="#F8F9FA"
                        android:paddingHorizontal="12dp"
                        app:layout_constraintTop_toTopOf="@id/divider"
                        app:layout_constraintBottom_toBottomOf="@id/divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- Botón Registrar elegante -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/txtRegistrar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@android:color/transparent"
                        android:text="@string/txtRegister"
                        android:textAlignment="center"
                        android:textColor="#D32F2F"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:paddingVertical="14dp"
                        android:paddingHorizontal="24dp"
                        app:cornerRadius="25dp"
                        app:rippleColor="#FFEBEE"
                        app:strokeColor="#D32F2F"
                        app:strokeWidth="2dp"
                        app:icon="@drawable/ic_restaurant_register"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:iconTint="#D32F2F"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        app:layout_constraintTop_toBottomOf="@id/divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Decoración inferior -->
            <ImageView
                android:id="@+id/ivDecoration"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/restaurant_decoration"
                android:scaleType="centerInside"
                android:alpha="0.7"
                app:layout_constraintTop_toBottomOf="@id/cardForm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
