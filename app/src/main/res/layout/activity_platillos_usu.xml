<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/pexels"
    tools:context=".views.platilloscreen.PlatillosActivityUsu">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlatillos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="110dp"
        app:layout_constraintBottom_toTopOf="@+id/llCuentaTotal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/llCuentaTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_total_cuenta_bg"
        android:gravity="center"
        android:padding="12dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:src="@drawable/icon_carro_compra"
            android:scaleType="centerInside"
            android:background="@drawable/rounded_button_bg"
            android:elevation="4dp"
            android:contentDescription="BotonCarrito" />

        <TextView
            android:id="@+id/tvCuentaTotal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_cuenta_bg"
            android:gravity="center"
            android:hint="ðŸ’° VER MI CUENTA"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:elevation="2dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>