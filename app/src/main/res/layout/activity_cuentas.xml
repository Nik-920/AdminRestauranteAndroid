<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amor_secreto"
    android:padding="16dp"
    tools:context=".views.cuentascreen.CuentasActivity">

    <!-- Header con gradiente elegante -->

    <!-- Separador elegante -->
    <LinearLayout
        android:id="@+id/llHeaderContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_header_bg"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Título del restaurante -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="🍽️ Mi Cuenta"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Contenedor para el título y spinner -->
        <LinearLayout
            android:id="@+id/llSpinnerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_spinner_bg"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvSpinnerLabel"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:text="🪑 Seleccione número de mesa:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerMesa"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/spinner_background"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llHeaderContainer" />

    <!-- Título para la tabla de cuentas con diseño mejorado -->
    <TextView
        android:id="@+id/tvCuentaTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="📋 Detalles de la Cuenta"
        android:textColor="@color/black"
        android:background="@drawable/rounded_title_bg"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <!-- ScrollView con diseño mejorado -->

    <!-- LinearLayout del total con diseño premium -->

    <LinearLayout
        android:id="@+id/scrollView"
        android:layout_width="381dp"
        android:layout_height="408dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_scrollview_bg"
        app:layout_constraintBottom_toTopOf="@+id/llCuentaTotal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCuentaTitle"
        app:layout_constraintVertical_bias="0.0">

        <TableLayout
            android:id="@+id/tlCuenta"
            android:layout_marginTop="16dp"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:stretchColumns="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCuentaTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/rounded_total_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnCarrito"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:contentDescription="Botón Carrito"
            android:elevation="4dp"
            android:scaleType="centerInside"
            android:background="@drawable/rounded_button_bg"
            android:src="@drawable/icon_carro_compra" />

        <TextView
            android:id="@+id/tvCuentaTotal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="🙋‍♂️ ENVIAR PEDIDO"
            android:textColor="@color/black"
            android:background="@drawable/rounded_cuenta_bg"
            android:padding="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="2dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>